<script>
  $(document).ready(function () {
    const imageInput = $('#image');
    const imageValidationMessage = $('#imageValidationMessage');
    const nameInput = $('#name');
    const descriptionInput = $('#description');
    const priceInput = $('#price');
  
    $('#addProductForm').on('submit', function (event) {
      // Check for valid image file types
      if (!validateImageFiles(imageInput[0])) {
        event.preventDefault();
        imageValidationMessage.text('Invalid image file type(s)');
      } else {
        imageValidationMessage.text(''); // Clear the error message
      }
  
      // Check for empty or whitespace-only name and description fields
      if ($.trim(nameInput.val()) === '') {
        event.preventDefault();
        alert('Name field cannot be empty.');
        return;
      }
  
      if ($.trim(descriptionInput.val()) === '') {
        event.preventDefault();
        alert('Description field cannot be empty.');
        return;
      }
      
      // Check for whitespace-only name and description fields
      if (!nameInput.val().trim()) {
        event.preventDefault();
        alert('Name field cannot contain only whitespace.');
        return;
      }
  
      if (!descriptionInput.val().trim()) {
        event.preventDefault();
        alert('Description field cannot contain only whitespace.');
        return;
      }
  
      // Check for a valid price (greater than 0)
      const price = parseFloat(priceInput.val());
      if (isNaN(price) || price <= 0) {
        event.preventDefault();
        alert('Price must be a valid number greater than 0.');
      }
    });
  
    // Clear the error message when the image input value changes
    imageInput.on('change', function () {
      imageValidationMessage.text('');
    });
  
    function validateImageFiles(input) {
      const files = input.files;
      const allowedTypes = ['image/jpeg', 'image/png'];
  
      for (const file of files) {
        if (!allowedTypes.includes(file.type)) {
          return false; // Invalid file type found
        }
      }
  
      return true; // All files pass validation
    }
  });
</script>


