<div class="page-wrapper">
    <div class="container-fluid">
      <div class="row page-titles">
        <div class="col-md-5 align-self-center">
          <h3 class="text-themecolor">Coupon list</h3>
        </div>
      </div>
      <a class="waves-effect waves-dark p-4" href="/admin/addCoupons" aria-expanded="false">
        <i class="fa fa-gift"></i><span class="hide-menu">Add Coupon</span>
      </a>
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">All Coupons</h4>
              <h6 class="card-subtitle">Coupon <code>Table</code></h6>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>No.</th>
                      <th>Coupon Code</th>
                      <th>Expire Date</th>
                      <th>Max Discount</th>
                      <th>Min Purchase Amount</th>
                      <th>Percentage Off</th>
                      <th>Status</th>
                      <th>Action</th>
                      <th>Edit</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% coupons.forEach((element, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><b><%= element.code %></b></td>
                      <td><b><%= element.expirationDate.toLocaleDateString() %></b></td>
                      <td><b><%= element.maxDiscount %></b></td>
                      <td><b><%= element.MinPurchaceAmount %></b></td>
                      <td><b><%= element.percentageOff %></b></td>
                      <% date = new Date(); %>
                      <% if (element.expirationDate >= date) { %>
                      <td style="color: green;"><b>Active</b></td>
                      <% } else { %>
                      <td style="color: red;"><b>Expired</b></td>
                      <% } %>
                      <td>
                        <button style="background-color: rgb(205, 34, 34); color: rgb(255, 253, 253); border-radius: 5px;"
                          onclick="deleteCoupon('<%= element._id %>')">Delete</button>
                      </td>
                      <td>
                        <a style="height: 30px;" class="btn btn-primary" href="EditCoupon/<%= element._id %>">Edit</a>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  

  <style>
    .page-wrapper {
      padding: 20px;
      background-color: #ffffff;
      border-radius: 10px;
    }
  
    .card {
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
  
    .card-title {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 10px;
      color: #333;
    }
  
    .card-subtitle {
      font-size: 16px;
      color: #888;
      margin-bottom: 20px;
    }
  
    table {
      width: 100%;
      border-collapse: collapse;
    }
  
