  color: #fff;
}

.delete-button:hover {
  background-color: #c82333;
}

.edit-button {
  background-color: #007bff;
  color: #fff;
}

.edit-button:hover {
  background-color: #0056b3;
}



/* Additional styles for delete and edit buttons */
.btn-container {
  display: flex;
  align-items: center;
}

.recover-button,
.delete-button,
.edit-button {
  padding: 8px 16px;
  margin-right: 10px;
  font-size: 14px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.recover-button {
  background-color: #17a2b8;
  color: #fff;
}

.delete-button {
  background-color: #dc3545;
  color: #fff;
}

.edit-button {
  background-color: #007bff;
  color: #fff;
}

.recover-button:hover,
.delete-button:hover,
.edit-button:hover {
  background-color: #138496;
