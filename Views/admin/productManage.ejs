  <div class="container-fluid mt-5">
  <div class="row">
    <div class="col-12">
      <div class="tm-bg-primary-dark tm-block">
        <h2 class="tm-block-title mb-4">Product Management</h2>
        <div class="table-responsive">
          <table class="table table-hover tm-table-small tm-product-table">
            <thead>
              <tr>
                <th scope="col">NO.</th>
                <th scope="col">NAME</th>
                <th scope="col">IMAGE</th>
                <th scope="col">DESCRIPTION</th>
                <th scope="col">PRICE</th>
                <th scope="col">OFFER PRICE</th>
                <th scope="col">CATEGORY</th>
                <th scope="col">ACTION</th>
              </tr>
            </thead>
            <tbody>
       <!-- Product data will be dynamically populated here -->
       <% products.forEach((element, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= element.name %></td>
          <td><img style="height: 150px; border-radius: 10px;" src="/uploads/<%= element.image[1] %> " alt="avatar"></td>
          <td><%= element.description %></td>
          <td><%= element.price %></td>
          <td><%= element.offerPrice %></td>
          <td><%= element.category?.name %></td>
          <td>
            <div class="btn-container">
              <% if (element.deleted) { %> <!-- Check if the product is deleted -->
                <button type="button" class="recover-button" onclick="validate2('<%= element._id %>')">Recover</button>
              <% } else { %>
                <button type="button" class="delete-button" onclick="validate1('<%= element._id %>')">Delete</button>
              <% } %>
              <a href="/admin/editProduct/<%= element._id %>">
                <button class="edit-button">Edit</button>
              </a>
            </div>
          </td>
        </tr>
      <% }) %>
            </tbody>
          </table>
        </div>
        <!-- table container -->
      </div>
    </div>
  </div>
</div>

