    <script>
        console.log();
        var xValues = ["confirmed", "delivered", "shipped", "cancelled"];
        var yValues = ["<%=confirmed%>", "<%=delivered%>", "<%=shipped%>", "<%=cancelled%>"];
        var barColors = ["orange", "green", "blue", "red",];

        new Chart("orderStatusChart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
