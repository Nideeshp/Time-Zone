    // Setup the pagination based on the total number of products
    function setupPagination(totalItems) {
        var totalPages = Math.ceil(totalItems / itemsPerPage);

        var paginationContainer = $('#pagination-container');
        paginationContainer.empty();

        // Create the pagination links
        for (var i = 1; i <= totalPages; i++) {
            var link = $('<a href="#" class="pagination-link">' + i + '</a>');
            if (i === currentPage) {
                link.addClass('active');
            }
            link.on('click', handlePaginationClick);
            paginationContainer.append(link);
        }
    }

    // Handle pagination link click
    function handlePaginationClick(event) {
        event.preventDefault();
        currentPage = parseInt($(this).text());

        // Fetch and display the products for the current page
        fetchProducts();

        // Update the active pagination link
        $('.pagination-link').removeClass('active');
        $(this).addClass('active');
    }

    // Initial fetch and display of products
    fetchProducts();
});





