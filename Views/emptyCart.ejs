<!-- emptyCart.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Empty Cart</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }

      h1 {
        color: #333;
      }

      p {
        margin-bottom: 10px;
      }

      .container {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Empty Cart</h1>

      <% if (userdetails) { %>
        <p class="greeting">Hi, <%= userdetails.name %>!</p>
        <p>Your cart is currently empty.</p>
        <!-- Add any additional messages or instructions here -->
      <% } else { %>
        <p>Your cart is currently empty.</p>
        <!-- Add alternative content or instructions for users who are not logged in -->
      <% } %>
    </div>
  </body>
</html>
